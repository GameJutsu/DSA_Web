{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "date",
      "number",
      "name",
      "difficulty",
      "code",
      "review"
    ],
    "properties": {
      "date": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "ISO 8601 date string (YYYY-MM-DD)"
      },
      "number": {
        "type": "integer",
        "minimum": 1
      },
      "name": {
        "type": "string"
      },
      "difficulty": {
        "type": "string",
        "enum": ["Easy", "Medium", "Hard"]
      },
      "link": {
        "type": "string",
        "format": "uri"
      },
      "solvedInPython": {
        "type": "boolean",
        "default": false,
        "description": "Flag to indicate if a Python solution exists or is planned"
      },
      "code": {
        "type": "string",
        "description": "Primary solution code (usually C++)"
      },
      "myApproach": {
        "type": "string",
        "description": "Explanation of the approach used (auto-generated by AI)",
        "default": "Auto-generated: Approach summary pending."
      },
      "myComplexity": {
        "type": "string",
        "description": "Time and Space complexity analysis (auto-generated by AI)",
        "default": "Auto-generated: Complexity pending."
      },
      "betterApproach": {
        "type": "string",
        "description": "Explanation of a more optimal approach, if any"
      },
      "betterComplexity": {
        "type": "string",
        "description": "Complexity of the better approach"
      },
      "review": {
        "type": "object",
        "required": ["nextReviewDate", "interval", "easeFactor", "repetitions"],
        "properties": {
          "nextReviewDate": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "interval": {
            "type": "integer",
            "description": "Days until next review",
            "minimum": 0
          },
          "easeFactor": {
            "type": "number",
            "description": "SuperMemo-2 Ease Factor",
            "minimum": 1.3
          },
          "repetitions": {
            "type": "integer",
            "description": "Consecutive successful reviews",
            "minimum": 0
          }
        }
      }
    }
  }
}
